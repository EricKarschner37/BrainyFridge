<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="12dp">
    <LinearLayout
                  android:orientation="horizontal"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:padding="4dp"
                  android:layout_margin="4dp"
                    android:background="@drawable/oval">

        <RelativeLayout
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:padding="2dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="16dp"
                android:gravity="center">

            <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/green_circle"
                    android:id="@+id/days_color_view"/>

            <TextView
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:id="@+id/days_tv"
                    style="@style/StandardText"/>

        </RelativeLayout>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:id="@+id/food_name_tv"
                style="@style/StandardText"/>

        <View android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" />

        <ImageButton
                android:layout_gravity="center"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginRight="4dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:id="@+id/delete_button"
                android:src="@drawable/ic_delete"/>

    </LinearLayout>

    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#000000" android:layout_marginTop="8dp"/>

</LinearLayout>